<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="章节"/>

        <TextView
            android:id="@+id/chapter_order_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正序"
            android:padding="2dp"
            android:textColor="@color/sena_gray"
            android:layout_toLeftOf="@+id/chapter_order_reverse"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:id="@+id/chapter_order_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/sena_blue"
            android:text="倒序"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_list_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>