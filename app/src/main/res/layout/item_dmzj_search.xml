<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">


    <ImageView
        android:id="@+id/comic_cover_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/dp_10"/>

    <TextView
        android:id="@+id/comic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/comic_cover_image"/>

    <TextView
        android:id="@+id/comic_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/comic_cover_image"
        android:layout_below="@id/comic_title"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/comic_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/comic_cover_image"
        android:layout_below="@+id/comic_author"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/comic_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/comic_cover_image"
        android:layout_below="@id/comic_classify"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:text="1224"
        android:id="@+id/comic_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/comic_author"/>



</RelativeLayout>