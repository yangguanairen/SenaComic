<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kuaikanmanhua.view.KuaiKanAllChapterActivity"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/comic_cover_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/comic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comic_cover_image"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/is_ending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comic_cover_image"
                android:layout_below="@+id/comic_title"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:id="@+id/comic_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comic_cover_image"
                android:layout_below="@+id/is_ending"
                android:layout_marginTop="@dimen/dp_10" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comic_cover_image"
                android:layout_below="@id/comic_nickname"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/subscribe"
                    android:text="订阅漫画"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dmzj_favorite_true"
                    android:padding="5dp"
                    android:clickable="false"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/continue_read"
                    android:text="继续阅读"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:clickable="false"
                    android:background="@drawable/dmzj_favorite_true"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/comic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="4"
            android:ellipsize="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/sena_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="章节"/>

            <TextView
                android:id="@+id/chapter_order_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正序"
                android:textSize="16sp"
                android:textColor="@color/sena_blue"
                android:layout_toLeftOf="@+id/chapter_order_reverse"
                android:layout_marginEnd="40dp"/>

            <TextView
                android:id="@+id/chapter_order_reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒序"
                android:textSize="16sp"
                android:textColor="@color/sena_gray"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_comic_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</androidx.core.widget.NestedScrollView>